server {
  listen 80 default_server;
  access_log <%= node['timesync']['access_log'] %>;
  error_log <%= node['timesync']['error_log'] %>;
  server_name <%= node['timesync']['server_name'] %>;

  location / {
    add_header 'Access-Control-Allow-Origin' '*';
    add_header 'Access-Control-Allow-Headers' 'Origin, X-Requested-With, Content-Type, Accept';
    proxy_pass http://localhost:<%= node['timesync']['port'] %>;
  }
}
